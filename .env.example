# =============================================================================
# Основные настройки Django
# =============================================================================

# Секретный ключ для криптографической подписи. Сгенерируйте новый для production!
# Сгенерировать можно командой: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-in-production

# Режим отладки. Установите False в production!
# ВНИМАНИЕ: Никогда не устанавливайте DEBUG=True в production, это раскрывает конфиденциальную информацию
DEBUG=False

# Список разрешенных хостов/доменов через запятую
# Для production укажите ваш домен: example.com,www.example.com
# Для разработки можно использовать: localhost,127.0.0.1
ALLOWED_HOSTS=*

# =============================================================================
# Настройки CORS и CSRF
# =============================================================================

# Список доверенных источников для защиты CSRF через запятую
# Добавьте URL вашего фронтенда (протокол + домен + порт)
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000

# Список источников, разрешенных для кросс-доменных запросов через запятую
# Должен соответствовать URL вашего фронтенд приложения
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# Конфигурация базы данных
# =============================================================================

# Движок базы данных. Варианты:
# - django.db.backends.sqlite3 (для SQLite - по умолчанию)
# - django.db.backends.postgresql (для PostgreSQL)
# - django.db.backends.mysql (для MySQL)
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=corebackend_db

# Пользователь базы данных (оставьте пустым для SQLite)
DATABASE_USER=

# Пароль базы данных (оставьте пустым для SQLite)
DATABASE_PASSWORD=

# Хост базы данных (оставьте пустым для SQLite, используйте 'localhost' или IP для удаленных БД)
DATABASE_HOST=

# Порт базы данных (оставьте пустым для SQLite, используйте '5432' для PostgreSQL, '3306' для MySQL)
DATABASE_PORT=

# =============================================================================
# Внешние API ключи и сервисы
# =============================================================================


# Конфигурация сервиса электронной почты Mailgun
MAILGUN_API_KEY=your-mailgun-api-key-here
MAILGUN_DOMAIN=mail.domain.com


# =============================================================================
# Настройки приложения
# =============================================================================

# Базовый URL для обслуживания изображений/медиа файлов
# В production используйте ваш домен: https://yourdomain.com
# В разработке используйте: http://127.0.0.1:8000 или http://localhost:8000
BASE_IMAGE_URL=http://127.0.0.1:8000/

# =============================================================================
# Ограничение частоты запросов API
# =============================================================================

# Дневной лимит запросов для платных аккаунтов Client API (запросов в день)
CLIENT_API_DAILY_RATE_LIMIT=500

# Общий лимит запросов для бесплатных аккаунтов Client API (всего запросов, не дневной)
FREE_CLIENT_LIMIT=100

# =============================================================================
# Настройки GraphQL
# =============================================================================

# Максимальная сложность GraphQL запросов
GRAPHQL_MAX_COMPLEXITY=1000

# Максимальная глубина вложенности GraphQL запросов
GRAPHQL_MAX_DEPTH=15

# =============================================================================
# Redis (опционально)
# =============================================================================

# URL подключения к Redis для кэширования (опционально)
# REDIS_URL=redis://localhost:6379/0